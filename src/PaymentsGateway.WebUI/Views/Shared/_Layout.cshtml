<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
@*    @Scripts.Render("~/bundles/modernizr")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-3.3.0.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/knockout-validation/2.0.3/knockout.validation.min.js"></script>

    @Scripts.Render("~/Scripts/libs/jquery.signalR-2.2.0.js")
    <style>
        .bg-orange {
            background-color: #f4511e;
            background-color: rgba(244, 81, 30, 0.9);
            color: #ffffff;
        }

        .bg-grey, .jumbotron {
            background-color: #f6f6f6;
        }

        .container-fluid {
            padding: 60px 50px;
        }

        .paymentState {
            font-size: 15px;
        }
        .paymentState.glyphicon-ok {
            color:greenyellow
        }
        .paymentState.glyphicon-time {
            color:yellow
        }
    </style>

</head>
<body>
    <div class="container body-content">
        <div class="container">
            <div class="jumbotron">
                <h1>Paying for the fun of it</h1>
            </div>
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

</body>
</html>